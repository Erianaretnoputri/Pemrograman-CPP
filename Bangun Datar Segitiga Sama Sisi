#include <bits/stdc++.h>
#include <iostream>

using namespace std;

int main() {
	
	int tinggi;
	char karakter;
	
	cin >> tinggi;
	cin >> karakter;
	
	for(int i=1; i <= tinggi; i++) {
		
		for(int batas=tinggi; batas >= i; batas--) {
			cout << " ";			
		}
		
		for(int x=1; x<=i ; x++) {
			cout << karakter << " ";
		}
		cout << endl;
		
	}
	
	return 0;
	
}
